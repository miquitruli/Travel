  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Travel</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css" />
    <style>
      .notice {
        color: red;
      }
    </style>
  </head>
  <body>
    <div class="wrapper">
      

        <p><%= yield %></p>

        <div class="container">
        <%= "<div class='notice'>#{flash[:notice]}</div>" if flash[:notice] %>

        <nav>
          <% if logged_in? %>
          <p>Logged in as: <%= current_user.email %></p>
            <a href="/logout"> Logout </a> | 
            <a href="/bucketlists"> Bucketlist</a> | 
            <a href="/bucketlists/new"> New Bucketlist</a> |
            <a href="/bucketlists/countries_visited"> My Visited Countries</a>

            <% else %>
            <p>
            <a href="/register"> Register </a>
            <a href="/login"> Login </a></p>
            <% end %>
         </nav>

      <footer class="branding">
        <small>&copy; 2021 <strong>Travel</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
